<div class="main">

	<!-- First Page -->
	<section class="page-one">

		<!-- Carousel - Contains featured events/societies, taken from Bootstrap -->
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
     		<ol class="carousel-indicators">
        		<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        		<li data-target="#carousel-example-generic" data-slide-to="1"></li>
        		<li data-target="#carousel-example-generic" data-slide-to="2"></li>
      		</ol>
      		<div class="carousel-inner">
        		<div class="item active">
          			<%= image_tag('/assets/society-images/robotics_club.jpg', alt:"First Slide") %>
        		</div>
        		<div class="item">
          			<%= image_tag('/assets/event-images/anime-umelb.jpg', alt:"Second Slide") %>
        		</div>
        		<div class="item">
          			<%= image_tag('/assets/society-images/robotics_club.jpg', alt:"Third Slide") %>
        		</div>
      		</div>
      		<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        		<%= image_tag 'left-arrow.gif' %>
      		</a>
      		<a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
      			<%= image_tag 'right-arrow.gif' %>
      		</a>
      	</div>
      	<!-- END: Carousel -->

        </section>
    <!-- END: First Page -->
	
	<!-- Page Two - Society/Events Contents -->
  	<section class="page-two">
		<div id="main-content">

			<!-- Sliding Sidebar -->
			<div id="sidebar">
				<ul style="list-style:none">
					<li class="side-h1"><p>Account</p></li>
					<ul style="list-style:none">
						<li class="side-h2"><a href="#">My Societies</a></li>
						<li class="side-h2"><a href="#">Adiministered</a></li>
						<li class="side-h2"><a href="#">My Upcoming Events</a></li>
					</ul>
					<li class="side-h1"><p>Browse Societies</p></li>
					<ul style="list-style:none">
						<li class="side-h2 active"><a href="#">All Societies</a></li>
						<li class="side-h2"><a href="#">By Categories</a></li>
						<li class="side-h2"><a href="#">By University</a></li>
					</ul>
					<li class="side-h1"><p>Browse Events</p></li>
					<ul style="list-style:none">
						<li class="side-h2"><a href="#">Upcoming Events</a></li>
						<li class="side-h2"><a href="#">Past Events</a></li>
						<li class="side-h2"><a href="#">By Categories</a></li>
						<li class="side-h2"><a href="#">By University</a></li>
					</ul></br>
				</ul>
			</div>
			<div id="open-sidebar-btn">
				<%= image_tag 'right.png' %>
			</div>
			<!-- END: Sliding Sidebar -->

			<!-- Grid Contents - Contains grids of societies/events -->
			<div id="grid-content">
				<div id="grid-list-cont">
					<div id="grid-list">
						<div id="grid-hdr">Societies - ALL</div>

						<% if @societies.empty? %>
							<p>No society have been registered.</p>
						<% else %>
							<% @societies.each do |s| %>
								<div class="grid-entry">
									<div class="grid-entry-img">
										<%= image_tag s.logo %>
									</div>
									<div class="grid-entry-label">
										<div class="grid-entry-label-hdr">
											<h2><%= s.name %></h2>
											<p>University of Melbourne</p><br>
										</div>
										<div class="grid-entry-label-content">
											<%= s.description %>
										</div>
										<div class="grid-entry-label-btns">
											<a>Follow</a>
											<%= link_to("Go To Page", {controller: 'societies', action: 'show', id: s.id}) %>
										</div>
									</div>
								</div>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
			<!-- END: Grid Contents -->
		</div>
	</section>
	<!-- END: Page Two -->
</div>

