<div class="onpage">
	<div class="event-card">
		<div class="left-desc">
			<div class="event-logo">
				<%= image_tag @event.logo %>
			</div>
			<% if !current_user.nil? %>
				<% if (EventFollower.find_by(user_id: current_user.id, event_id:@event.id)).nil? %>
					<%= link_to({controller: "users", action: 'followEvent', :eventId => @event.id}) do %>
						<span class="glyphicon glyphicon-star">Follow</span>
					<% end %>
				<% end %>

			<% else %>
				<%= link_to({controller: "users", action: 'unfollowEvent', :eventId => @event.id}) do %>
					<span class="glyphicon glyphicon-star-empty">Unfollow</span>
				<% end %>
			<% end %>
		</div>

		<div class="event-desc">
			<h1 class="title"><%= @event.name %><a href=<%= @event.website %>>  <span class="glyphicon glyphicon-new-window"></span></a></h1>
			<p class="subtitle"><%= University.find_by(id: @event.university_id) %></p>
			<%= link_to "Edit Content", {action: 'edit'} %>
			<p><%= (@event.short_description).html_safe %></p>

			<p><b>Email: </b> <%= @event.email %></p>
			<p><b>Phone Number: </b> <%= @event.phone_number %></p>

			

			<h4>Description</h4>
			<p><%= (@event.description).html_safe %></p>
			<h4>Office Address</h4>
			<p><%= @event.office_address_line1 %><br>
			<%= @event.office_address_line2 %><br>
			<%= @event.office_city %><br>
			<%= @event.office_state %> <%= @event.office_postcode %></p>
		</div>
	</div>

	<!-- TABS -->
	<div class="tabs">
		<div class="tab st0" style='background-color: lightgrey;'>
			<p><span class="glyphicon glyphicon-bullhorn"></span> Announce</p>
		</div>
		<div class="tab st1" style='background-color: #C4CDCD;'>
			<p><span class="glyphicon glyphicon-calendar"></span> Events</p>
		</div>
		<div class="tab st2" style='background-color: #97A0A9;'>
			<p><span class="glyphicon glyphicon-camera"></span> Gallery</p>
		</div>
		<div class="tab st3" style='background-color: #74D7C4;'>
			<p><span class="glyphicon glyphicon-comment"></span> Feedbacks</p>
		</div>
		<div class="tab st4" style='background-color: #A6C0D1;'>
			<p><span class="glyphicon glyphicon-user"></span> Followers</p>
		</div>
		<div class="tab st5" style='background-color: #F8C471;'>
			<p><span class="glyphicon glyphicon-globe"></span> Networks</p>
		</div>
	</div>
	<!-- END: TABS -->
</div>


<!-- TAB CONTENTS -->
<div class="tab-pages">

	<!-- Announcements -->
	<div class="tab-page st0" style='background-color: lightgrey;'>
		<div class="exit"><span class="glyphicon glyphicon-remove"></span></div>
		<div class="tab-page-content">
			<h1>Announcements</h1>
			<% if !@announcements.nil? %>
				<% if @announcements.empty? %>
					<p>This event does not have any announcements</p>
				<% else %>
					
					<% @announcements.each do |a| %>
						<div class="announce-entry-wrapper">
							<h4><b><%= (User.find_by(id: a.user_id)).first_name %></b> wrote:</h4>
							<%= a.text.html_safe %>
						</div>
					<% end %>
				<% end %>
			<% end %>
		</div>
	</div>
	<!-- END: Announcements -->

	<!-- EVENTS -->
	<div class="tab-page st1" style='background-color: #C4CDCD;'>
		<div class="exit"><span class="glyphicon glyphicon-remove"></span></div>
		<div class="tab-page-content">
			<h1>Upcoming</h1>
			<% if @events.empty? %>
				<p>No events in this category.</p>
			<% else %>
				<% @events.each do |s| %>
					<div class="grid-entry">
						<div class="grid-entry-img">
							<%= image_tag s.logo %>
						</div>
						<div class="grid-entry-label">
							<div class="grid-entry-label-hdr">
								<h2><%= s.name %></h2>
								<p>University of Melbourne</p><br>
							</div>
							<div class="grid-entry-label-content">
								<%= s.short_description %>
							</div>
							<div class="grid-entry-label-btns">
								<%= link_to("Follow") %>
								<%= link_to("Go To Page", {controller: 'events', action: 'show', id: s.id}) %>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
	<!-- END: EVENTS -->

	<!-- GALLERY -->
	<div class="tab-page st2" style='background-color: #97A0A9;'>
		<div class="exit"><span class="glyphicon glyphicon-remove"></span></div>
		<div class="tab-page-content">
			
			<div class="image-entry">
				<%= image_tag @event.logo %>
				<p class="image-caption">Logo</p>
			</div>
			<% (EventEvent.where(event_id: @event.id)).each do |se| %>
				<% (Gallery.where(event_id: se.event_id)).each do |gallery| %>
					<% if !((gallery.image1).nil?) %>
						<div class="image-entry">
							<%= image_tag gallery.image1 %>
							<p class="image-caption"><%= (Event.find_by(id: se.event_id)).name %></p>
						</div>
						<% if !((gallery.image2).nil?) %>
							<div class="image-entry">
								<%= image_tag gallery.image2 %>
								<p class="image-caption"><%= (Event.find_by(id: se.event_id)).name %></p>
							</div>
							<% if !((gallery.image3).nil?) %>
								<div class="image-entry">
									<%= image_tag gallery.image3 %>
									<p class="image-caption"><%= (Event.find_by(id: se.event_id)).name %></p>
								</div>
							<% end %>
						<% end %>
					<% end %>
				<% end %>
			<% end %>
		</div>
	</div>
	<!-- END: GALLERY -->

	<!-- FEDDBACKS -->
	<div class="tab-page st3" style='background-color: #74D7C4;'>
		<div class="exit"><span class="glyphicon glyphicon-remove"></span></div>
		<div class="tab-page-content">
			<h1>Any Comments?</h1>
			<%= form_tag({controller: "events", action: "addFeedback"}, class:"feedback-form") do %>
				<%= text_area_tag(:fb) %>
				<%= hidden_field_tag(:id, @event.id) %>
				<%= submit_tag("Post", class: "btn btn-default btn-lg") %>
			<% end %>
			<h1>All Comments</h1>
			<div class="feedback-container">
				<% (EventFeedback.where(event_id: @event.id)).each do |sf| %>
					<div class="feedback-entry">
						<h4><%= (User.find_by(id: sf.user_id)).first_name %> <%= (User.find_by(id: sf.user_id)).last_name %></h4>
						<p><%= sf.text %></p>
					</div>
						
				<% end %>
			</div>
		</div>
	</div>
	<!-- END: FEDDBACKS -->

	<!-- FOLLOWERS -->
	<div class="tab-page st4" style='background-color: #A6C0D1;' style="color:grey;">
		<div class="exit"><span class="glyphicon glyphicon-remove"></span></div>
		<div class="tab-page-content">
			<% (EventFollower.where(event_id: @event.id)).each do |sf| %>
				<h3><%= (User.find_by(id: sf.user_id)).first_name %> <%= (User.find_by(id: sf.user_id)).last_name %></h3>
			<% end %>
		</div>
	</div>
	<!-- END: FOLLOWERS -->

	<!-- NETWORKS --> 
	<div class="tab-page st5" style='background-color: #F8C471;'>
		<div class="exit"><span class="glyphicon glyphicon-remove"></span></div>
		<div class="tab-page-content">
			
		</div>
	</div>
	<!-- END: NETWORKS -->
</div>
<!-- END: TAB CONTENTS -->