<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart =>true}) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :photo do  %>
      <%= f.file_field :photo %>
      <%= f.hidden_field :photo_cache %>
    <% end %>

  <div/>

  <div>
    <%= f.text_field :first_name , :placeholder =>  "Enter your first name"  %>
  </div>
  <br/>
  <div>
    <%= f.text_field :last_name, :placeholder =>  "Enter your last name"%>
  </div>
  <br/>
  <div>
    <%= f.text_field :username, :placeholder =>  "Enter your username" %>
  </div>
<br/>
  <div>
    <%= f.text_field :phone_number, :placeholder =>  "Enter your phone number" %>
  </div>
<br/>
  <div>
    <%= f.email_field :email, autofocus: true, :placeholder => "Enter your email"  %>
  </div>
<br/>
  <div>
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter your password" %>
  </div>
<br/>
  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Re-Enter your password"  %>
  </div>
<br/>
  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
