<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart =>true}) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :photo do  %>
      <%= f.file_field :photo %>
      <%= f.hidden_field :photo_cache %>
    <% end %>

  <div/>

  <div>
    <%= f.label :first_name %></br>
    <%= f.text_field :first_name , :placeholder =>  "Enter your first name"  %>
  </div>

  <div>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, :placeholder =>  "Enter your last name"%>
  </div>
  
  <div>
    <%= f.label :username %><br>
    <%= f.text_field :username, :placeholder =>  "Enter your username" %>
  </div>

  <div>
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number, :placeholder =>  "Enter your phone number" %>
  </div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, :placeholder => "Enter your email"  %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter your password" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Re-Enter your password"  %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
