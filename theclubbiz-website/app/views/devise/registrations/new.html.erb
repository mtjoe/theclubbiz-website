<h2 align="middle">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart =>true}) do |f| %>
  <%= devise_error_messages! %>
  <br>
  <div class="photo" align="middle" >
    <%= f.label :photo do  %>
      <%= f.file_field :photo %>
      <%= f.hidden_field :photo_cache %>
    <% end %>

  <div/>
  <br>
  <div class="first_name" align="middle">
    <%= f.text_field :first_name , :placeholder =>  "Enter your first name", :size => "139.5"  %>
  </div>
  <br/>
  <div class="last_name" align="middle">
    <%= f.text_field :last_name, :placeholder =>  "Enter your last name", :size => "139.5" %>
  </div>
  <br/>
  <div class="user_name" align="middle">
    <%= f.text_field :username, :placeholder =>  "Enter your username", :size => "139.5"  %>
  </div>
<br/>
  <div class="phone_number" align="middle">
    <%= f.text_field :phone_number, :placeholder =>  "Enter your phone number", :size => "139.5"  %>
  </div>
<br/>
  <div class="email" align="middle">
    <%= f.email_field :email, autofocus: true, :placeholder => "Enter your email", :size => "139.5"   %>
  </div>
<br/>
  <div class="password" align="middle">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter your password", :size => "139.5"  %>
  </div>
<br/>
  <div class="password_re_enter" align="middle">
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Re-Enter your password", :size => "139.5"   %>
  </div>
<br/>
  <div class="actions" align="middle"><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
